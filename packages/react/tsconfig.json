{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": ["src", "../storybook/utils", "../storybook-react/src/mocks"],
  "exclude": ["node_modules", "dist"]
}
